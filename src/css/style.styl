@require './_*.styl'

// General Usage
body
    background-color white
    overflow-x hidden
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

* {
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
}

header
    padding-top 5px
    border-top 3px solid yellow

footer
    background-color black
    padding 6px

.align-center
    text-align center

#main
    position relative

// Carousel Slider
.carousel-container
    display flex
    justify-content center
    .carousel-viewport
        white-space nowrap
        width 100%
        overflow-x hidden
        .slider-nav
            position absolute
            position absolute
            margin-top -45px
            width 100%
            text-align center
            button
                background-color white
                margin 6px
                border-radius 100%
                border none
                outline none
                width 16px
                height 16px
                &#nav1.selected1
                        background-color yellow
                &#nav2.selected2
                        background-color yellow
                &#nav3.selected3
                        background-color yellow
    .carousel-viewport::-webkit-scrollbar
        display none

.slide
    width 100%
    background-size cover
    background-position center left
    background-repeat no-repeat
    display inline-block
    text-align center
    padding 120px 0
    h1
        color white
    pre
        color white

.slide-arrow
    z-index 5
    background none
    border none
    outline none
    width 0
    padding 0
    position relative
    &.left
        left 10%
    &.right
        right 10%
        img
            margin-left -30px
    :hover
        filter brightness(.9)

_::-webkit-full-page-media, _:future, :root .carousel-container  // for safari only
    position relative

_::-webkit-full-page-media, _:future, :root .slide-arrow // for safari only
    position absolute
    width auto
    top 42%

_::-webkit-full-page-media, _:future, :root .slide-arrow.right img // for safari only
    margin-left 0

// Articles
.container
    margin-right auto
    margin-left auto
    padding-left 15px
    padding-right 15px
    @media screen and (min-width: 992px)
        width 970px
    @media screen and (min-width: 1200px)
        width 1170px

.article-section
    width 70%
    display inline-block
    padding-right 40px
    margin-top 50px
    margin-bottom 100px
    article
        display flex
        align-items center
        margin-bottom 10px
    h3
        margin-top 4px
    span
        color gray
    img
        width 30%
        display inline-block
    .article-info
        width 70%
        display inline-block
        padding 15px
    .more-btn
        font-family "Helvetica"
        font-weight normal
        position relative
        color white
        background-color #333333
        padding 10px 160px
        span
            color white
            font-weight 200
            position absolute
            font-size 15px
            top 7px
            right 4%
            transform scaleX(1) scaleY(2)
    .align-center
        margin-top 40px
    :hover
        >h3
            color yellow

// Sidebar
.sidebar
    width 30%
    display inline-block
    vertical-align top
    background-color light-gray
    padding 20px
    margin-top 60px
    a.dummy-banner
        font-family "Helvetica"
        font-size 15px
        font-weight normal
        background white
        width 100%
        height 300px
        display flex
        justify-content center
        align-items center
    .recommend-section
        margin-top 30px
        display block
        article
            display flex
            align-items center
            margin 15px 0
        h2
            border-bottom 3px solid black
            margin 5px 0
        img
            width 40%
            display inline-block
        .recommend-info
            width 60%
            display inline-block
            padding-left 15px
            h4
                margin 5px 0 0 0
            span
                color gray
                font-size 12px
        :hover
            >h4
                color yellow
    .dummy-banners
        margin-top 35px
        a
            font-family "Helvetica"
            font-size 15px
            font-weight normal
            display block
            text-align center
            color white
            background-color #666666
            padding 40px
            margin-top 20px

// Dummy Page
.dummy-page
    background-color rgba(231, 186, 47, 0.29)
    padding 40px 30px 60px
    .back-btn
        font-family "Helvetica"
        background black
        color white
        padding 10px 20px

// Footer
footer
    .footer-left
        display inline-block
        a
            color white
            font-size 13px
            display inline-block
            margin-right 20px
    .footer-right
        float right
        display inline-block
        p
            font-family "Helvetica", sans-serif
            font-weight 200
            font-size 14px
            color white

// Scroll Up
a.scroll-top
    display block
    position absolute
    right 12%
    bottom 4%